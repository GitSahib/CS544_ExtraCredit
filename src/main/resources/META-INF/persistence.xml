<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="ea544extra">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>projects.mum.edu.ea.domain.Project</class>
		<class>projects.mum.edu.ea.domain.User</class>
		<class>projects.mum.edu.ea.domain.Task</class>
		<class>projects.mum.edu.ea.domain.Beneficiary</class>
		<class>projects.mum.edu.ea.domain.Image</class>
		<class>projects.mum.edu.ea.domain.Resource</class>
		<class>projects.mum.edu.ea.domain.Offer</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="org.gjt.mm.mysql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/ea544extra?createDatabaseIfNotExist=true" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>          
